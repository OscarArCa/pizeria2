@model IEnumerable<Pizzeria.Models.Orders.Orders>

@{
    ViewBag.Title = "Orders";
}

<h2 class="text-center mb-4">Pedidos</h2>
<p class="text-center" style="color:dodgerblue">@TempData["Mensaje"]</p>
<p class="text-center">
    @Html.ActionLink("Crear Orden", "Index", "Home", new { @class = "btn btn-primary" })
</p>

<div class="table-responsive shadow-sm rounded bg-white p-3">
    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Numero de orden</th>
                <th>Nombre del cliente</th>
                <th>Apellido del cliente</th>
                <th>Dni del cliente</th>
                <th>Código de la pizza</th>
                <th>Pizza</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.order_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.customer_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.last_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.dni)</td>
                    <td>@Html.DisplayFor(modelItem => item.pizza_pizza_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.pizza_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.quantity)</td>
                    <td>S/@Html.DisplayFor(modelItem => item.total)</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            @Html.ActionLink("Pagar Pedido Generando Boleta", "Pagar", "Orders", new { id = item.order_id, s = 1, dni = item.dni, cant = item.quantity, total = item.total, pizza_id = item.pizza_pizza_id }, new { @class = "btn btn-sm btn-warning mx-1" })
                            @Html.ActionLink("Pagar Pedido Generando Factura", "Pagar", "Orders", new { id = item.order_id, s = 2, dni = item.dni, cant = item.quantity, total = item.total, pizza_id = item.pizza_pizza_id }, new { @class = "btn btn-sm btn-success mx-1" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
