@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar pedido</title>
</head>
<body>
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-container {
            max-width: 600px;
            margin: auto;
            padding: 40px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-weight: bold;
            margin-bottom: 30px;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 8px;
        }

        .form-control,
        .form-select {
            border-radius: 10px;
            border: 1px solid #ced4da;
            padding: 10px 15px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus,
            .form-select:focus {
                border-color: #dc3545;
                box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
            }

        .btn-danger {
            border-radius: 10px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease-in-out;
        }

            .btn-danger:hover {
                background-color: #c82333;
                box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
            }

        .text-success {
            font-weight: 500;
        }
        .form-control, .form-select{
            min-width: 100%;
        }
    </style>

    <div class="container mt-5">
        <div class="form-container">
            <h2 class="text-danger text-center">Registrar Pedido 🍕</h2>

            <p class="text-success text-center">@TempData["Mensaje"]</p>

            @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                <div class="mb-4">
                    <label for="dni" class="form-label">DNI del cliente:</label>
                    <input type="text" id="dni" name="dni" class="form-control" placeholder="Ej. 12345678" required />
                </div>

                <div class="mb-4">
                    <label for="name" class="form-label">Nombre del cliente:</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Ej. Juan" required />
                </div>

                <div class="mb-4">
                    <label for="ape" class="form-label">Apellido del cliente:</label>
                    <input type="text" id="ape" name="last_name" class="form-control" placeholder="Ej. Pérez" required />
                </div>

                <div class="mb-4">
                    <label for="pizza_id" class="form-label">Seleccionar pizza:</label>
                    @Html.DropDownList("pizza_id", ViewBag.Pizzas as SelectList, "Selecciona una pizza", new { @class = "form-select" })
                </div>

                <div class="mb-4">
                    <label for="cant" class="form-label">Cantidad de pizzas:</label>
                    <input type="number" id="cant" name="cant" class="form-control" placeholder="Ej. 2" required />
                </div>

                <button type="submit" class="btn btn-danger w-100 py-3">Registrar Pedido</button>
            }
        </div>
    </div>








</body>
</html>