@model IEnumerable<Pizzeria.Models.Orders.Orders>

@{
    ViewBag.Title = "Cocinados";
}

<h2 class="text-center mb-4">Pedidos Cocinados</h2>
<p class="text-center" style="color:dodgerblue">@TempData["Mensaje"]</p>

<div class="table-responsive shadow-sm rounded bg-white p-3">
    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Numero de orden</th>
                <th>Nombre del cliente</th>
                <th>Apellido del cliente</th>
                <th>Dni del cliente</th>
                <th>Pizza</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.order_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.customer_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.last_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.dni)</td>
                    <td>@Html.DisplayFor(modelItem => item.pizza_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.quantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p class="text-center" style="font-weight:bold; font-size:16px; margin-top:10px; color:green">
    Total de pizzas cocinadas: @ViewBag.TotalPizzas
</p>

<p class="text-center">
    @Html.ActionLink("Cerrar Cocina", "Cerrar", new { }, new { @class = "btn btn-warning" })
</p>
