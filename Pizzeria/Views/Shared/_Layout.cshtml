<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Pizzería</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            font-family: 'Poppins', sans-serif;
            background-color: #fff8f0;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1;
        }

        /* Barra de navegación estilo pizzería */
        .navbar {
            background-color: #8B0000;
            padding: 1.2rem 2rem;
        }

        .navbar-brand {
            color: #FFD700 !important;
            font-size: 1.8rem;
            font-weight: 700;
        }

        .navbar-nav .nav-link {
            color: #fff8f0 !important;
            font-size: 1.1rem;
            font-weight: 500;
            margin-left: 1rem;
        }

            .navbar-nav .nav-link:hover {
                color: #FFA500 !important;
            }

        /* Footer fijo al fondo */
        footer {
            background-color: #8B0000;
            color: #fff8f0;
            text-align: center;
            padding: 2rem 0;
            font-weight: 500;
            width: 100%;
        }

        /* Botón personalizado */
        .btn-primary {
            background-color: #FFA500;
            border-color: #FFA500;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #e68a00;
                border-color: #e68a00;
            }

        .container.body-content {
            padding-top: 2rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            @Html.ActionLink("Pizzería", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">@Html.ActionLink("Registrar Pedido", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Ver Pedidos", "Orders", "Orders", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Ver Cocina", "Cocina", "Cocina", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Ver Boletas", "Boletas", "Boleta", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Cerrar Sesión", "Login", "Login", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="content-wrapper container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Pizzería🍕</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
